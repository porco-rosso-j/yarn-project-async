{
  "name": "@aztec/noir-contracts.js",
  "version": "0.46.1",
  "type": "module",
  "exports": {
    ".": "./dest/index.js",
    "./artifacts/*": "./artifacts/*.json",
    "./*": "./dest/*.js"
  },
  "scripts": {
    "build": "yarn clean && yarn build:dev",
    "build:dev": "tsc -b",
    "clean": "rm -rf ./dest",
    "formatting": "run -T prettier --check ./src && run -T eslint ./src",
    "formatting:fix": "run -T eslint --fix ./src && run -T prettier -w ./src",
    "test": "NODE_NO_WARNINGS=1 node --experimental-vm-modules ../node_modules/.bin/jest --passWithNoTests"
  },
  "inherits": [
    "../package.common.json"
  ],
  "jest": {
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.[cm]?js$": "$1"
    },
    "testRegex": "./src/.*\\.test\\.(js|mjs|ts)$",
    "rootDir": "./src",
    "transform": {
      "^.+\\.tsx?$": [
        "@swc/jest",
        {
          "jsc": {
            "parser": {
              "syntax": "typescript",
              "decorators": true
            }
          }
        }
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "reporters": [
      [
        "default",
        {
          "summaryThreshold": 9999
        }
      ]
    ]
  },
  "dependencies": {
    "@aztec/aztec.js": "file:../aztec.js",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "files": [
    "dest",
    "src",
    "artifacts",
    "!*.test.*"
  ],
  "types": "./dest/types/index.d.ts",
  "engines": {
    "node": ">=18"
  }
}